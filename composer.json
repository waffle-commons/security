{
    "name": "waffle-commons/{COMPONENT_NAME}",
    "version": "0.1.0-alpha1.0",
    "description": "Short description of {COMPONENT_NAME}.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Waffle\\Commons\\{COMPONENT_NAME}": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WaffleTests\\Commons\\{COMPONENT_NAME}": "tests/src/"
        }
    },
    "authors": [
        {
            "name": "Leslie Petrimaux",
            "email": "contact@waffle-commons.cloud"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "carthage-software/mago": "^1.0.0-beta.31",
        "vimeo/psalm": "^6.13",
        "php-mock/php-mock-phpunit": "^2.13"
    },
    "scripts": {
        "formatter": "vendor/bin/mago fmt",
        "linter": "vendor/bin/mago lint",
        "analyzer": "vendor/bin/mago analyze",
        "phpunit": "vendor/bin/phpunit --log-junit var/data/phpunit-coverage/junit.xml --coverage-html var/data/phpunit-coverage",
        "benchmark": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/phpbench run --report=default_report --output=waffle_html --retry-threshold=10"
        ],
        "mago": [
            "@formatter",
            "@linter",
            "@analyzer"
        ],
        "tests": [
            "@phpunit"
        ],
        "scan": [
            "@mago",
            "@tests"
        ],
        "ci": [
          "@mago",
          "@tests",
          "composer audit",
          "vendor/bin/psalm --taint-analysis"
        ]
    },
    "config": {
        "allow-plugins": {
            "carthage-software/mago": true
        }
    }
}
